{
	"name": "javascript-development-environment",
	"version": "1.0.0",
	"description": "JavaScript development environment by Juma Kiwaka",
	"scripts": {
		"prestart": "babel-node buildScripts/message.js",
		"start": "babel-node buildScripts/srcServer.js",
		"dev": "npm-run-all --parallel start lint:watch test:watch start-mock",
		"localtunnel": "lt --port 3000 --subdomain juma",
		"share": "npm-run-all --parallel start localtunnel",
		"lint": "esw webpack.config.* src buildScripts --color",
		"lint:watch": "npm run lint -- --watch",
		"test": "mocha --reporter progress buildScripts/testSetup.js 'src/**/*.test.js'",
		"test:watch": "npm run test -- --watch",
		"generate-mock-data": "babel-node buildScripts/generateMockData.js",
		"prestart-mock": "npm run generate-mock-data",
		"start-mock": "json-server --watch src/api/db.json --port 3001",
		"clean": "rimraf ./dist && mkdir dist",
		"prebuild": "npm-run-all clean test lint",
		"build": "babel-node buildScripts/build.js",
		"postbuild": "babel-node buildScripts/distServer.js"
	},
	"author": "Juma Kiwaka",
	"license": "MIT",
	"dependencies": {
		"@babel/core": "^7.5.0",
		"@babel/preset-env": "^7.5.0",
		"mini-css-extract-plugin": "^0.8.0",
		"uglifyjs-webpack-plugin": "^2.1.3",
		"whatwg-fetch": "^3.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-loader": "^8.0.6",
		"babel-preset-latest": "^6.24.1",
		"babel-register": "^6.26.0",
		"chai": "^4.2.0",
		"chalk": "^2.4.2",
		"cheerio": "^1.0.0-rc.3",
		"compression": "^1.7.4",
		"cross-env": "^5.2.0",
		"css-loader": "^3.0.0",
		"eslint": "^6.0.1",
		"eslint-plugin-import": "^2.18.0",
		"eslint-watch": "^5.1.2",
		"express": "^4.17.3",
		"extract-text-webpack-plugin": "^3.0.2",
		"html-webpack-plugin": "^3.2.0",
		"jsdom": "^15.1.1",
		"json-schema-faker": "^0.5.0-rc17",
		"json-server": "^0.15.0",
		"localtunnel": "^1.9.2",
		"mocha": "^6.1.4",
		"nock": "^10.0.6",
		"npm-run-all": "^4.1.5",
		"nsp": "^3.2.1",
		"numeral": "^2.0.6",
		"open": "^6.4.0",
		"rimraf": "^2.6.3",
		"style-loader": "^0.23.1",
		"surge": "^0.21.3",
		"webpack": "^4.35.2",
		"webpack-dev-middleware": "^3.7.0",
		"webpack-hot-middleware": "^2.25.0",
		"webpack-md5-hash": "0.0.6"
	}
}
